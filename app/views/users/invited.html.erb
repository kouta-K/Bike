<% if @members.any? %>    
    <% @members.each do |member| %>
        <div>
            <%= member.group.name %>からのリクエスト
        </div>
        <%= form_with(model: member, local: true) do |f| %>
            <%= hidden_field_tag :group_id, member.group.id %>
            <%= f.submit "参加" %>
        <% end %>
        <%= form_with(model: member, local: true, method: :delete) do |f| %>
            <%= f.submit "拒否", class: "delete" %>
        <% end %>
    <% end %>
<% else %>
    <p>現在リクエストはありません</p>
<% end %>