<div class="admin-container"> 
    <%= render"groups/admin_menu" %>
    <div class="group-form">
        <h1>グループ編集</h1>
        <%= form_with(model: @group, local: true) do |f| %>
            <%= f.label :name, "グループ名" %>
            <%= f.text_field :name %>
            
            <%= f.label :introduce, "紹介文" %>
            <%= f.text_area :introduce %>
            
            <%= f.label :image, "グループ画像" %>
            <%= f.file_field :image %>
            <div>
                <%= f.submit "編集", class: "submit" %>
            </div>
        <% end %>
    </div>  
</div>  