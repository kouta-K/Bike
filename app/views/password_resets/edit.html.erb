<div class="password_edit">
    <h2>新しいパスワードの設定</h2>
    <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>
        <%= hidden_field_tag :email, @user.email %>
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "password" %>
        <%= f.label :password_confirmation, "確認用パスワード" %>
        <%= f.password_field :password_confirmation, class: "password" %>
        
        <div class="submit"><%= f.submit "送信" %></div>
<% end %>
</div>